<div class="container">
  <%= form_for(@user, :html => { :multipart => true }) do |f| %>
  <div class="form-group">
    <label>名前</label>
    <%= f.text_field :fullname, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>座右の銘</label>
    <%= f.text_field :motto, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>居住地</label>
    <%= f.text_field :place, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>学校</label>
    <%= f.text_field :school, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>自己紹介</label>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>背景画像</label>
    <%= f.file_field :background_image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Twitter</label>
    <%= f.text_field :twitter_url, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Facebook</label>
    <%= f.text_field :facebook_url, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Github</label>
    <%= f.text_field :github_url, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit '更新', class: "btn btn-primary" %>
  </div>
  <% end %>
</div>