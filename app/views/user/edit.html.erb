<div class="container">
  <%= form_for(@user, :html => { :multipart => true }) do |f| %>
  <div class="form-group">
    <label>名前</label>
    <%= f.text_field :fullname, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit '更新', class: "btn btn-primary" %>
  </div>
  <% end %>
</div>

