<div align="center">
<%= form_for(@project, url: {action: 'update'}, :html => { :multipart => true }) do |f| %>
  <% if @project.errors.any? %>
    <h4>入力した内容にエラーが<%= @project.errors.count %>件あります</h4>
    <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="container">
    <div>
    <label>タイトル</label>
    <%= f.text_field :title, placeholder: "タイトル", class: 'form-control input-sm'  %><br>
    <label>目標金額</label>
    <%= f.number_field :target_amount_of_money, placeholder: "目標金額", class: 'form-control input-sm project_new_form'%><br>
    <label>説明</label>
    <%= f.text_field :description, placeholder: "説明", class: 'form-control input-sm'  %><br>
    <label>画像</label>
    <%= f.file_field :image, class: 'form-control'  %><br>
    <%= f.hidden_field :user_id,  :value => current_user.id  %>
    </div>
    <%= f.submit "更新", class: "btn btn-primary"  %>
  </div>
<% end %>
</div>